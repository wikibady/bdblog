extends layout

- var title = {title}
- var article = {article}
block title
    title #{title}
    meta(name='title', content=title)
    meta(name='keywords', content=article.keywords)
    meta(name='description', content=article.description)
block content
    div.content
      h1 #{article.title}
      div(class='date') #{article.date}
      div.body!= article.body

block sidebar
    div.side
        div.aliyun
            a(href='https://www.aliyun.com/product/ecs?spm=5176.8060947.416540.23.yDw80m')
                img(src='http://7pumi0.com1.z0.glb.clouddn.com/b3c7a061489b158c85c4141b17bdc55e.jpg')
                span 独享优惠码 5tzk1m
        div.hot-rock
            div.hot-text 大家在看
            - each article in hotarticles
              a(href="./query?id=#{article.id}")
                div(class='article hot')
                  span.track #{article.track}
                  h6 #{article.title}
                  div(class='all-date') #{article.date}
